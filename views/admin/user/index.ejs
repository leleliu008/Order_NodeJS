<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,inital-scale=1.0,maximum-scale=1.0,user-scalable=no"/>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <title>乐餐吧后台———用户管理</title>

    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css"/>

    <script type="text/javascript" src="/javascripts/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="/javascripts/browserChecker.js"></script>

    <!--[if lt IE 9]>
    <script src="/javascripts/respond.js"></script>
    <script src="/javascripts/html5shiv.min.js"></script>
    <![endif]-->
</head>
<body style="font-size: 12px">

<div class="container">
    <div class="row" style="margin-top: 5px">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 hidden-sm hidden-xs">

        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <div class="h1" style="display: inline-block">用户管理</div>
                </div>

                <% if (users && users.length > 0) { %>
                <div style="padding: 10px; border-bottom: 1px solid gainsboro">
                    用户列表：
                </div>
                <div style="min-height: 300px; max-height: 400px; overflow-y: auto">
                    <table class="table table-responsive table-striped table-hover table-bordered">
                        <thead>
                        <tr>
                            <th>序号</th>
                            <th>真实姓名</th>
                            <th>手机号码</th>
                        </tr>
                        </thead>
                        <% for (var i = 0; i < users.length; i++) { %>
                        <% var item = users[i] %>
                        <tbody>
                        <tr>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                        <%= i %>
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                        <li><a href="/admin/user/show/<%= item.id %>">详情</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li><a href="/admin/user/edit/<%= item.id %>">编辑</a></li>
                                        <li role="separator" class="divider"></li>
                                        <li id="delete_<%= item.id %>" style="padding-left: 20px">删除</li>
                                    </ul>
                                </div>
                            </td>
                            <td><%= item.realName %></td>
                            <td><%= item.phoneNumber %></td>
                        </tr>
                        </tbody>
                        <% } %>
                    </table>
                </div>
                <% } else { %>
                <div class="h2 text-center" style="height: 300px; padding-top: 130px">
                    无用户
                </div>
                <% } %>

                <div class="text-center" style="margin-top: 20px; margin-bottom: 20px">
                    <button id="deleteAllBtn" type="button" class="btn btn-success" style="width: 40%">删除全部</button>
                    <a href="/admin/user/add" type="button" class="btn btn-success" style="width: 40%">添加用户</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 hidden-sm hidden-xs">

        </div>
    </div>
</div>

<script src="/javascripts/jquery-1.9.1.min.js"></script>
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/javascripts/layer/layer.js"></script>
<script>
    $(document).ready(function () {
        var users = '<%- JSON.stringify(users) %>';
        users = JSON.parse(users);

        for (var i = 0; i < users.length; i++) {
            var item = users[i];
            handleDelete(item);
        }
    });

    function handleDelete(item) {
        $('#delete_' + item.id).click(function () {
            $.ajax({
                url: '/admin/user/delete/' + item.id, //请求的url地址，这是相对于现在的位置的地址
                dataType: 'json',              //返回格式为json
                async: true,                   //请求是否异步，默认为异步，这也是ajax重要特性
                data: {},                      //参数值
                type: 'POST',                  //请求方式
                beforeSend: function () {      //请求前的处理

                },
                success: function (response) { //请求成功时处理
                    var errMsg = '删除失败';

                    if (response) {
                        if (response.code == 0) {
                            layer.alert('删除成功', {
                                skin: 'layui-layer-molv',  //样式类名
                                closeBtn: 0,
                                shift: 2 //动画类型
                            }, function() {
                                location.reload();
                            });
                            return;
                        }

                        if (response.message) {
                            errMsg = response.message;
                        }
                    }

                    layer.alert(errMsg, {
                        skin: 'layui-layer-molv',  //样式类名
                        closeBtn: 0,
                        shift: 2 //动画类型
                    });
                },
                error: function () {          //请求出错处理
                    layer.alert('请求失败，请重试！', {
                        skin: 'layui-layer-molv',  //样式类名
                        closeBtn: 0,
                        shift: 2 //动画类型
                    });
                },
                complete: function () {       //请求完成的处理

                }
            });
        });
        $('#deleteAllBtn').click(function () {
            $.ajax({
                url: '/admin/user/delete/all', //请求的url地址，这是相对于现在的位置的地址
                dataType: 'json',              //返回格式为json
                async: true,                   //请求是否异步，默认为异步，这也是ajax重要特性
                data: {},                      //参数值
                type: 'POST',                  //请求方式
                beforeSend: function () {      //请求前的处理

                },
                success: function (response) { //请求成功时处理
                    var errMsg = '删除失败';

                    if (response) {
                        if (response.code == 0) {
                            layer.alert('删除成功', {
                                skin: 'layui-layer-molv',  //样式类名
                                closeBtn: 0,
                                shift: 2 //动画类型
                            }, function() {
                                location.reload();
                            });
                            return;
                        }

                        if (response.message) {
                            errMsg = response.message;
                        }
                    }

                    layer.alert(errMsg, {
                        skin: 'layui-layer-molv',  //样式类名
                        closeBtn: 0,
                        shift: 2 //动画类型
                    });
                },
                error: function () {          //请求出错处理
                    layer.alert('请求失败，请重试！', {
                        skin: 'layui-layer-molv',  //样式类名
                        closeBtn: 0,
                        shift: 2 //动画类型
                    });
                },
                complete: function () {       //请求完成的处理

                }
            });
        });
    }
</script>
</body>
</html>